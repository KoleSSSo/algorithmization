import pandas as pd
import numpy as np
print("9.3")
def products (path):
    prod_df = pd.read_csv(path)
    summary = prod_df['Цена'].sum
    print("Нужно купить!!")
    for i in prod_df.index:
        print(prod_df['Продукт'], '-', prod_df['Количество'], 'штуки за', prod_df['Цена'], 'руб.')
    print("Итого: ", summary, "рублей")

file_path = "test.txt"
products(file_path)
